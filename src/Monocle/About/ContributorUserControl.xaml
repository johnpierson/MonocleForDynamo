<UserControl x:Class="MonocleViewExtension.About.ContributorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonocleViewExtension.About"
             mc:Ignorable="d" 
             Height="48" 
             Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="{Binding UserImageSource}"/>
        <TextBlock Grid.Column="2" FontSize="14" VerticalAlignment="Center" FontFamily="Comic Sans MS" Foreground="White">
<Run Text="{Binding UserName}"/>
            <Hyperlink NavigateUri="{Binding NavigateUri}" RequestNavigate="Hyperlink_OnRequestNavigate">
                🔗
            </Hyperlink>
        </TextBlock>
    </Grid>

</UserControl>
